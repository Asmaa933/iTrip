<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.MaterialComponents.CardView"
    android:id="@+id/container_list_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layout_marginBottom="12dp"
    android:outlineSpotShadowColor="@color/Black"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    android:clickable="true"
    android:background="@android:drawable/list_selector_background"
    >

    <LinearLayout
        android:id="@+id/history_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_list_item_map_history"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/map_country_globe_world_11131_1600x900"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_list_item_main_histroy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_img_default_img" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/title_list_item_histoy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3sp"
                    android:text="Title"
                    android:textColor="@color/Black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp">
                <TextView
                    android:id="@+id/time_list_item_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/7/1995      12.00 am"
                    android:textColor="@color/Black"
                    android:textSize="14sp"/>
            </LinearLayout>



        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp">

            <TextView
                android:id="@+id/fromTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:text=" From : Aswan"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/toTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:text=" To : Alex"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/delete_list_item_main_history"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:drawable/ic_menu_delete"></Button>
    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>